# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /profile                    controllers.Application.profile()
GET     /order                      controllers.Application.order()
GET     /promotion                  controllers.Application.promotion()
GET     /location_page              controllers.Application.location_page()
GET     /products                   controllers.Application.products()
GET     /home_page                  controllers.Application.home_page()
GET     /shop                       controllers.Application.shop()
GET     /test                       controllers.Application.test()
GET     /sale1                      controllers.Application.sale1()
GET     /sale2                      controllers.Application.sale2()
GET     /inputMakeup                controllers.Application.inputMakeup()
POST    /postMakeup                 controllers.Application.PostMakeup()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
